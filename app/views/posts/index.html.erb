<h1>Books</h1>
  <% @books.each do |book| %>
  <table>
    <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th></th>
        </tr>
    </thead>
  <tbody>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to 'Show', post_path(book.id) %></td>
      <td><%= link_to 'Edit', edit_post_path(book.id) %></td>
      <td><%= link_to 'Destroy', destroy_post_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
    </tr>
  </tbody>
  <% end %>
</table>

<div>
  <h2>New book</h2>
  <%= form_with model:@book, url:'/posts', local:true do |f| %>
    <div class="field">
      <%= f.label :title %> <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :body %>  <%= f.text_area :body %>
    </div>
    <div class="action">
      <%= f.submit 'Create Book' %>
    </div>
  <% end %>
</div>
