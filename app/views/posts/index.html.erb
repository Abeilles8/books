<h1>Books</h1>
  <table>
    <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th></th>
        </tr>
    </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to 'Show', post_path(book.id) %></td>
      <td><%= link_to 'Edit', edit_post_path(book.id) %></td>
      <td><%= link_to 'Destroy', "posts/#{book.id}", method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
    </tr>
  </tbody>
  <% end %>
</table>
<div>
  <%= render 'errors_message' %>
</div>
<div>
  <h2>New book</h2>
  <%= render 'form' %>
</div>
