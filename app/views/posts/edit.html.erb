<h1>Editing Book</h1>
<%= form_with model:@book, url:"/post/#{@book.id}", local:true do |f| %>
  <div class="field">
    <%= f.label :title %> <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %>  <%= f.text_area :body %>
  </div>
  <div class="action">
    <%= f.submit 'Update Book' %>
  </div>
<% end %>
<%= link_to 'Show', post_path(@book.id) %>
|
<%= link_to 'Back', posts_path %>
